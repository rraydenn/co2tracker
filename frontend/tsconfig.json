{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"outDir": "./frontend-app",
		"rootDir": "./",
		"noEmit": false
	},
	"files": [],
	"references": [
		{ "path": "./tsconfig.app.json" },
		{ "path": "./tsconfig.node.json" }
	]
}
